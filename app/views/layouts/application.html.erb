<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
	<% if RAILS_ENV == 'production'-%>
	<link rel='stylesheet' type='text/css' href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/start/jquery-ui.css' />
	<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'></script>
	<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js'></script>
	<% else -%>
		<%= stylesheet_link_tag 'jquery-ui' %>
		<%= javascript_include_tag 'jquery-1.3.2.js' %>
		<%= javascript_include_tag 'jquery-ui.min.js' %>
	<%end-%>
	<%= javascript_include_tag 'application' %>
	<%= javascript_include_tag 'jquery.corners.min.js' %>
	<%= yield :calendar %>
	<%= yield :js %>
	<%= yield :css %>
    <%= yield(:head) %>
  </head>
  <body>
	<div class="header">
		<div class="container">
			<div id="general-public-links">
				<% if pro_logged_in?-%>
				<%= link_to "Calendar", practitioner_url(current_pro.permalink), :class => "link"%>
				<% else -%>
					<% if !client_logged_in?-%>
						<%= link_to "Home", root_url, :class => "link"%>
					<% end %>
					<%= link_to "Book an appointment", edit_selected_practitioner_url, :class => "link"%>
				<% end -%>
			</div>
			<div id="pro-links">
				<span>Health professionals:</span>
				<%= link_to "Login", login_url, :class => "link"%>
				<%= link_to "Register for a free trial", new_practitioner_url, :class => "link"%>
			</div>
		</div>
	</div>
	<div class="cleaner"></div>
	<div id="content">
	  <%= render :partial => "clients/login_info" %>
	  <%= render :partial => "practitioners/login_info" %>
	  <%= render :partial => "practitioners/selected_pro_info"  %>
	  <div class="cleaner"></div>
	  <div id="flash">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      </div>
      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>
      <%= yield %>
	</div>
  </body>
</html>
