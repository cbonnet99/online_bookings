<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || APP_CONFIG[:site_name]) %></title>
	<link rel="SHORTCUT ICON" href="/images/favicon.ico"/>
	<% if RAILS_ENV == 'production'-%>
	<link rel='stylesheet' type='text/css' href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/start/jquery-ui.css' />
	<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'></script>
	<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js'></script>
	<% else -%>
		<%= stylesheet_link_tag 'jquery-ui' %>
		<%= javascript_include_tag 'jquery-1.3.2.js' %>
		<%= javascript_include_tag 'jquery-ui.min.js' %>
	<%end-%>
    <%= stylesheet_link_tag 'application' %>
	<%= javascript_include_tag 'application' %>
	<%= javascript_include_tag 'jquery.corners.min.js' %>
	<%= yield :calendar %>
	<%= yield :js %>
	<%= yield :css %>
    <%= yield(:head) %>
  </head>
  <body>
	<div class="header">
		<div id="logo"><%= image_tag "colibri_text.png", :height => "50" %></div>
		<div class="container">
			<div id="general-public-links"><% if pro_logged_in?-%>
				<%= link_to t(:home_calendar_tab), practitioner_url(current_pro.permalink, :tab => "calendar"), :class => selected_tab_classes(@selected_tab, "calendar")%>
				<%= link_to t(:home_clients_tab), practitioner_clients_url(current_pro.permalink, :tab => "clients"), :class => selected_tab_classes(@selected_tab, "clients")%>
			<% else -%>
				<% if !client_logged_in?-%>
					<%= link_to t(:home), root_url, :class => "link"%> |
				<% end %>
				<%= link_to t(:header_book_appointment), current_step, :class => "link"%>
				<% if client_logged_in?-%> |&nbsp;<% end -%> 
			<% end -%>
			</div>	
			<% if client_logged_in?-%>
				<%= render :partial => "clients/login_info" %>
			<% end %>
			
			<div id="pro-links">
				<% if pro_logged_in?-%>
				<%= render :partial => "practitioners/login_info" %>
				<% else -%>
					<% if !@current_selected_pro.nil? -%>
					<%= render :partial => "practitioners/selected_pro_info"  %>
					<%else -%>
						<span><%= t(:header_health_pro) %>:</span>
						<%= link_to t(:login), login_url, :class => "link"%> |
						<%= link_to t(:colibri_header_register), new_practitioner_url, :class => "link"%>
					<%end -%>
				<% end -%>
			</div>
		</div>
	</div>
	<div class="cleaner"></div>
	<div id="content">
	  <div class="cleaner"></div>
	  <div id="flash">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      </div>
	  <div id="container-home" class="rounded">
	      <%- if show_title? -%>
	        <h1><%=h yield(:title) %></h1>
	      <%- end -%>
      	  <%= yield %>
	  </div>
	</div>
  </body>
</html>
